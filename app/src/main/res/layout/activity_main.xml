<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_width="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/paButton"
                android:text="Price Ascending"
                android:layout_weight="5"
                android:layout_marginRight="1dp"
                android:textSize="14sp"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/pdButton"
                android:text="Price Descending"
                android:background="@android:color/holo_blue_dark"
                android:layout_weight="5"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/baButton"
                android:text="Bedrooms Ascending"
                android:layout_weight="5"
                android:layout_marginRight="1dp"
                android:textSize="14sp"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bdButton"
                android:text="Bedrooms Descending"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:layout_weight="5"
                android:layout_height="wrap_content"/>
            </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/propertyListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
